<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="ProductOffer">
        <property name="fkMerchant" type="int"/>
        <property name="merchantSku" type="string"/>
    </transfer>

    <transfer name="MerchantProductOfferCriteriaFilter">
        <property name="merchantReference" type="string"/>
        <property name="skus" type="array" singular="sku"/>
        <property name="isActive" type="bool"/>
    </transfer>

    <transfer name="ProductOfferCriteriaFilter">
        <property name="productOfferIds" type="int[]" singular="idProductOffer"/>
    </transfer>

    <transfer name="ProductOfferCollection">
    </transfer>
</transfers>
